{
  "name": "nx-nest-microservices",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:gateway": "pnpm nx serve api-gateway",
    "dev:users": "pnpm nx serve users-service",
    "dev:auth": "pnpm nx serve auth-service",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "db:init": "docker exec -i nx-microservices-postgres bash /docker-entrypoint-initdb.d/init-db.sh",
    "db:setup": "pnpm docker:up && pnpm docker:init && pnpm migrate:run",
    "migrate:users:run": "pnpm nx run users-service:migration:run",
    "migrate:users:revert": "pnpm nx run users-service:migration:revert",
    "migrate:users:generate": "pnpm nx run users-service:migration:generate",
    "migrate:auth:run": "pnpm nx run auth-service:migration:run",
    "migrate:auth:revert": "pnpm nx run auth-service:migration:revert",
    "migrate:auth:generate": "pnpm nx run auth-service:migration:generate",
    "migrate:run": "pnpm migrate:users:run && pnpm migrate:auth:run",
    "migrate:revert": "pnpm migrate:auth:revert && pnpm migrate:users:revert",
    "typeorm:cli": "TS_NODE_PROJECT=tsconfig.typeorm.json ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
  },
  "keywords": [],
  "author": "vadimgaidai",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/eslint": "^22.3.3",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/js": "22.3.3",
    "@nx/nest": "^22.3.3",
    "@nx/node": "22.3.3",
    "@nx/web": "22.3.3",
    "@nx/webpack": "22.3.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/amqplib": "^0.10.8",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "nx": "^22.3.3",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^7.1.1",
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/platform-express": "^11.1.10",
    "@nestjs/typeorm": "^11.0.0",
    "amqplib": "^0.10.9",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.28"
  }
}
