{
  "name": "users-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/users-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["--node-env=production"],
        "cwd": "apps/users-service"
      },
      "configurations": {
        "development": {
          "args": ["--node-env=development"]
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/users-service/package.json",
        "{workspaceRoot}/dist/apps/users-service/pnpm-lock.yaml"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/users-service/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "users-service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "users-service:build:development"
        },
        "production": {
          "buildTarget": "users-service:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/users-service/**/*.ts"]
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./node_modules/typeorm/cli.js migration:generate -d apps/users-service/src/data-source.ts apps/users-service/src/migrations/{args.name}",
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./node_modules/typeorm/cli.js migration:create apps/users-service/src/migrations/{args.name}",
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./node_modules/typeorm/cli.js migration:run -d apps/users-service/src/data-source.ts",
        "cwd": "{workspaceRoot}"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx ./node_modules/typeorm/cli.js migration:revert -d apps/users-service/src/data-source.ts",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}
